---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import CountDown from '~/components/widgets/CountDown.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'KCD Provence — Kubernetes Community Day à Aix-en-Provence',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Je veux participer',
        href: getPermalink('/contact'),
        icon: 'tabler:calendar',
      },
      { text: 'En savoir plus', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Image KCD Provence' }}
  >
    <Fragment slot="title">
      Kubernetes Community Day <br />
      <span class="text-accent dark:text-white">17 septembre 2026</span> à Aix-en-Provence
      <CountDown eventDate="2026-09-17T09:00:00" />
    </Fragment>

    <Fragment slot="subtitle">
      Une journée d’échanges et de conférences autour de Kubernetes et des technologies Cloud Native, portée par la
      communauté et soutenue par la CNCF.
    </Fragment>
  </Hero>

  <Note title="Notre philosophie :" description="Communauté, Partage et Technologies Open Source" />

  <Features
    id="features"
    tagline="Pourquoi venir ?"
    title="KCD Provence en un clin d’œil"
    subtitle="Un rendez-vous incontournable pour les passionnés du cloud, du DevOps, des conteneurs et des infrastructures modernes."
    items={[
      {
        title: 'Talks techniques',
        description: 'Conférences de qualité sur Kubernetes, Cloud Native, DevOps, observabilité, sécurité et plus.',
        icon: 'tabler:code',
      },
      {
        title: 'Communauté locale',
        description: 'Un moment pour rencontrer, échanger et s’inspirer auprès de passionnés et professionnels.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Opportunités de networking',
        description: 'Partenaires, recruteurs, experts : l’endroit idéal pour se connecter à l’écosystème tech.',
        icon: 'tabler:network',
      },
      {
        title: 'Accessibilité et inclusion',
        description:
          "Nous nous engageons à rendre l'événement accessible à tous, avec des initiatives pour la diversité.",
        icon: 'tabler:accessible',
      },
    ]}
  />

  <Content
    isReversed
    tagline="CNCF & KCD"
    title="Un événement soutenu par la Cloud Native Computing Foundation"
    items={[
      {
        title: '93 événements organisés',
        description: 'En 5 ans, plus de 93 KCD dans 41 pays ont rassemblé des milliers de passionnés.',
      },
      {
        title: 'Communautés actives',
        description:
          'Des communautés comme celles de Montpellier, Aix/Marseille, Sophia-Antipolis participent activement.',
      },
      {
        title: 'Ouvert à tous',
        description: 'Accessibilité, diversité et inclusion sont des valeurs fondamentales des KCD.',
      },
    ]}
    image={{
      src: '~/assets/images/event.jpg',
      alt: 'Événement CNCF',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Une initiative communautaire</h3>
      Propulsé par la CNCF, animé par des bénévoles passionnés.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps
    title="Comment participer à KCD Provence ?"
    items={[
      {
        title: 'Étape 1 : <span class="font-medium">Réservez votre billet</span>',
        description: "L'inscription est bientôt disponible. Restez à l'écoute !",
        icon: 'tabler:ticket',
      },
      {
        title: 'Étape 2 : <span class="font-medium">Proposez un talk</span>',
        description: 'Vous avez un sujet passionnant ? Répondez à notre appel à conférenciers.',
        icon: 'tabler:microphone',
      },
      {
        title: 'Étape 3 : <span class="font-medium">Devenez sponsor</span>',
        description: 'Valorisez votre marque auprès d’une audience qualifiée et engagée.',
        icon: 'tabler:building',
      },
      {
        title: 'Étape 4 : <span class="font-medium">Venez !</span>',
        description: 'Rejoignez-nous le 17 septembre 2026 à Aix-en-Provence. On vous attend !',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&auto=format&fit=crop&w=987&q=80',
      alt: 'Étapes',
    }}
  />

  <Stats
    stats={[
      { title: 'Participants attendus', amount: '450' },
      { title: 'Speakers', amount: '24' },
      { title: 'Talks', amount: '16' },
      { title: 'Bénévoles', amount: '20' },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Nous contacter',
        href: getPermalink('/contact'),
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">Rejoignez l’aventure !</Fragment>

    <Fragment slot="subtitle">
      Vous êtes passionné, entreprise, conférencier ou curieux ? Contactez-nous pour participer à KCD Provence.
    </Fragment>
  </CallToAction>
</Layout>
