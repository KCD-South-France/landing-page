---
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import CountDown from '~/components/widgets/CountDown.astro';
import Image from '~/components/common/Image.astro';
import { getPermalink } from '~/utils/permalinks';
import type { Image as ImageType, Item, Stat } from '~/types';

type ActionItem = {
  href: string;
} & Record<string, unknown>;

export interface Props {
  hero: {
    actions: readonly ActionItem[];
    image?: unknown;
    badge?: string;
    title?: string | { main?: string; subtitle?: string; date?: string; location?: string };
    subtitle?: string;
    eventDate?: string;
  };
  note: {
    title?: string;
    description?: string;
  };
  about?: {
    id?: string;
    title?: string;
    intro?: string;
    paragraph2?: string;
    stats?: readonly Stat[];
    whatToExpect?: {
      title?: string;
      items?: readonly Item[];
    };
    values?: {
      title?: string;
      items?: readonly Item[];
    };
  };
  cfp?: {
    id?: string;
    title?: string;
    intro?: string;
    status?: string;
    image?: unknown;
    importantDates?: {
      title?: string;
      items?: readonly { label: string; date: string }[];
    };
    tracks?: {
      title?: string;
      list?: readonly string[];
    };
    formats?: {
      title?: string;
      items?: readonly Item[];
    };
    speakerPerks?: {
      title?: string;
      items?: readonly string[];
    };
    guidelines?: {
      title?: string;
      items?: readonly string[];
    };
    cta?: string;
  };
  venue?: {
    title?: string;
    venueName?: string;
    description?: string;
    howToGetThere?: {
      title?: string;
      items?: readonly Item[];
    };
    accommodation?: {
      title?: string;
      text?: string;
    };
  };
  callToAction: {
    title?: string;
    subtitle?: string;
    actions: readonly ActionItem[];
  };
  countdownLabels?: {
    days: string;
    hours: string;
    minutes: string;
    seconds: string;
  };
}

const { hero, note, about, cfp, venue, callToAction, countdownLabels } = Astro.props;

const heroActionsWithPermalinks = hero.actions.map((action: ActionItem) => ({
  ...action,
  href: getPermalink(action.href),
}));

const callToActionActionsWithPermalinks = callToAction.actions.map((action: ActionItem) => ({
  ...action,
  href: getPermalink(action.href),
}));

const heroTitleHtml =
  typeof hero?.title === 'string'
    ? hero.title
    : [hero?.title?.main, hero?.title?.subtitle].filter(Boolean).join('<br class="block" />');

const heroBadge = hero?.badge;
---

<Hero actions={heroActionsWithPermalinks} image={hero.image} tagline={heroBadge}>
  <Fragment slot="title" set:html={heroTitleHtml} />
  <Fragment slot="subtitle" set:text={hero.subtitle} />
  {hero.eventDate && countdownLabels && <CountDown slot="title" eventDate={hero.eventDate} labels={countdownLabels} />}
</Hero>

<Note title={note.title} description={note.description} />

{
  about && (
    <>
      <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl" id={about.id}>
        <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
          {about.title && (
            <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
              {about.title}
            </h2>
          )}
        </div>
        {about.intro && (
          <div class="mb-6 text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
            <p>{about.intro}</p>
          </div>
        )}
        {about.paragraph2 && (
          <div class="mb-10 text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
            <p>{about.paragraph2}</p>
          </div>
        )}
        {about.stats && about.stats.length > 0 && <Stats stats={[...about.stats]} />}
        {about.whatToExpect && (
          <Features title={about.whatToExpect.title} items={[...(about.whatToExpect.items ?? [])]} columns={3} />
        )}
        {about.values && <Features title={about.values.title} items={[...(about.values.items ?? [])]} columns={3} />}
      </section>
    </>
  )
}

{
  cfp && (
    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl" id={cfp.id}>
      <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
        <p class="mb-3 text-sm font-semibold tracking-wider uppercase text-primary">CFP</p>
        {cfp.title && (
          <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">{cfp.title}</h2>
        )}
        {cfp.intro && <p class="text-xl text-muted dark:text-slate-300 leading-relaxed">{cfp.intro}</p>}
        {cfp.status && (
          <div class="mt-6">
            <span class="inline-flex items-center rounded-full border border-primary/20 bg-primary/10 px-4 py-2 text-sm font-semibold text-primary dark:border-primary/30 dark:bg-primary/20 dark:text-primary">
              {cfp.status}
            </span>
          </div>
        )}
      </div>

      {cfp.image && (
        <div class="mb-10 overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-slate-900">
          {typeof cfp.image === 'string' ? (
            <Fragment set:html={cfp.image} />
          ) : (
            <Image
              class="w-full bg-gray-500"
              width={1200}
              height={675}
              widths={[768, 1200]}
              sizes="100vw"
              layout="responsive"
              {...(cfp.image as ImageType)}
            />
          )}
        </div>
      )}

      <div class="space-y-8">
        {(cfp.importantDates || cfp.tracks) && (
          <div class="grid gap-6 lg:grid-cols-2">
            {cfp.importantDates && (
              <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-slate-900">
                <h3 class="mb-4 text-2xl font-bold">{cfp.importantDates.title}</h3>
                <ul class="space-y-3">
                  {cfp.importantDates.items?.map((item) => (
                    <li class="flex items-center justify-between gap-4 rounded-md border border-gray-200 px-4 py-3 dark:border-gray-700">
                      <span class="text-muted dark:text-slate-300">{item.label}</span>
                      <span class="font-semibold text-default dark:text-slate-100">{item.date}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {cfp.tracks && (
              <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-slate-900">
                <h3 class="mb-4 text-2xl font-bold">{cfp.tracks.title}</h3>
                <div class="flex flex-wrap gap-3">
                  {cfp.tracks.list?.map((track) => (
                    <span class="inline-flex rounded-full border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-default dark:border-gray-600 dark:bg-slate-800 dark:text-slate-200">
                      {track}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        )}

        {cfp.formats && (
          <div>
            <h3 class="mb-4 text-2xl font-bold">{cfp.formats.title}</h3>
            <ul class="grid gap-3 sm:grid-cols-2">
              {cfp.formats.items?.map((format) => (
                <li class="rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-slate-900">
                  <p class="mb-1 font-semibold text-default dark:text-slate-100">{format.title}</p>
                  <p class="text-sm text-muted dark:text-slate-300">{format.description}</p>
                </li>
              ))}
            </ul>
          </div>
        )}

        {(cfp.speakerPerks || cfp.guidelines) && (
          <div class="grid gap-4 sm:grid-cols-2">
            {cfp.speakerPerks && (
              <div class="rounded-lg border border-gray-200 bg-white p-5 dark:border-gray-700 dark:bg-slate-900">
                <h3 class="mb-3 text-xl font-bold">{cfp.speakerPerks.title}</h3>
                <ul class="space-y-2 text-muted dark:text-slate-300">
                  {cfp.speakerPerks.items?.map((perk) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-2 h-2 w-2 rounded-full bg-primary" aria-hidden="true" />
                      <span>{perk}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
            {cfp.guidelines && (
              <div class="rounded-lg border border-gray-200 bg-white p-5 dark:border-gray-700 dark:bg-slate-900">
                <h3 class="mb-3 text-xl font-bold">{cfp.guidelines.title}</h3>
                <ul class="space-y-2 text-muted dark:text-slate-300">
                  {cfp.guidelines.items?.map((guideline) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-2 h-2 w-2 rounded-full bg-primary" aria-hidden="true" />
                      <span>{guideline}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        )}

        {cfp.cta && (
          <div class="pt-2 text-center">
            <a
              href="#"
              class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 font-semibold text-white transition hover:opacity-90"
            >
              {cfp.cta}
            </a>
          </div>
        )}
      </div>
    </section>
  )
}

{
  venue && (
    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
      <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
        {venue.title && (
          <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
            {venue.title}
          </h2>
        )}
        {venue.venueName && <p class="text-2xl font-semibold text-primary mb-6">{venue.venueName}</p>}
      </div>
      {venue.description && (
        <div class="mb-10 text-xl text-muted dark:text-slate-300 max-w-3xl mx-auto text-center">
          <p>{venue.description}</p>
        </div>
      )}
      {venue.howToGetThere && (
        <Features title={venue.howToGetThere.title} items={[...(venue.howToGetThere.items ?? [])]} columns={3} />
      )}
      {venue.accommodation && (
        <div class="mt-10 max-w-3xl mx-auto text-center">
          <h3 class="text-2xl font-bold mb-4">{venue.accommodation.title}</h3>
          <p class="text-xl text-muted dark:text-slate-300">{venue.accommodation.text}</p>
        </div>
      )}
    </section>
  )
}

<CallToAction title={callToAction.title} subtitle={callToAction.subtitle} actions={callToActionActionsWithPermalinks} />
