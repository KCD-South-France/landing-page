{
  "name": "application",
  "version": "0.0.0",
  "description": "Landing page for the Cloud Native Provence conference",
  "type": "module",
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >= 21.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm run test -- --reporter=default --reporter=junit --outputFile=junit.xml --coverage.enabled --coverage.reporter=lcov --coverage.reporter=text",
    "lint": "npm run lint:astro && npm run lint:eslint && npm run lint:prettier",
    "lint:astro": "astro check",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:fix": "npm run lint:fix:astro && npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:astro": "npm run lint:astro -- --fix",
    "lint:fix:eslint": "npm run lint:eslint -- --fix .",
    "lint:fix:prettier": "npm run lint:prettier -- -w",
    "lint:ci:astro": "npm run lint:astro | tee astro-report.txt",
    "lint:ci:eslint": "npm run lint:eslint -- --format json -o eslint-report.json",
    "lint:ci:prettier": "npm run lint:prettier | tee prettier-report.txt",
    "lint:ci": "npm run lint:ci:astro && npm run lint:ci:eslint && npm run lint:ci:prettier"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@astrolib/analytics": "^0.6.1",
    "@astrolib/seo": "^1.0.0-beta.8",
    "@fontsource/montserrat": "^5.0.0",
    "astro": "^5.7.3",
    "astro-embed": "^0.12.0",
    "astro-icon": "^1.1.5",
    "limax": "4.2.2",
    "lodash.merge": "^4.6.2",
    "unpic": "^4.2.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.2",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/partytown": "^2.1.4",
    "@eslint/js": "^9.39.2",
    "@iconify-json/flat-color-icons": "^1.2.3",
    "@iconify-json/tabler": "^1.2.26",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/mdx": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "astro-compress": "2.3.9",
    "astro-eslint-parser": "^1.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.6.0",
    "globals": "^17.3.0",
    "js-yaml": "^4.1.0",
    "mdast-util-to-string": "^4.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "reading-time": "^1.5.0",
    "sharp": "0.34.5",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "unist-util-visit": "^5.1.0",
    "vitest": "^4.0.18"
  }
}
